@attribute [RenderModeWebAssembly(false)]
@inject HttpClient Http

@using BlazorApp

<PageTitle>Weather forecast</PageTitle>

<h1>Weather forecast</h1>

<p>This component is a client-side interactive component that demonstrates fetching and displaying data from the server via Web API.</p>

<p>Prerendering and streaming rendering has been turned off for practical reasons.</p>

@if (forecasts == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Date</th>
                <th>Temp. (C)</th>
                <th>Temp. (F)</th>
                <th>Summary</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var forecast in forecasts)
            {
                <tr>
                    <td>@forecast.Date.ToShortDateString()</td>
                    <td>@forecast.TemperatureC</td>
                    <td>@forecast.TemperatureF</td>
                    <td>@forecast.Summary</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private WeatherForecast[]? forecasts;

    protected override async Task OnInitializedAsync()
    {
        var startDate = DateOnly.FromDateTime(DateTime.Now).ToString("o");
        
        forecasts = await Http.GetFromJsonAsync<WeatherForecast[]>($"/api/weatherforecast?startDate={startDate}");
    }
}
